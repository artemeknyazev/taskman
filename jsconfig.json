{
  "compilerOptions": {
    "baseUrl": "./src",
    "checkJs": true,
    "jsx": "preserve",
    "module": "es6",
    "moduleResolution": "node",
    "paths": {
      "components/*": [ "components/*" ],
      "reducers": [ "reducers/index.js" ],
      "reducers/*": [ "reducers/*" ],
      "store": [ "store/index.js" ],
      "utils": [ "utils/index.js" ]
    },
    "target": "esnext"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ]
}