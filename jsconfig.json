{
  "compilerOptions": {
    "baseUrl": "./src",
    "checkJs": true,
    "jsx": "preserve",
    "module": "es6",
    "moduleResolution": "node",
    "paths": {
      "client/*": [ "client/*" ],
      "server/*": [ "server/*" ],
      "utils/*": [ "utils/*" ],
      "utils": [ "utils" ]
    },
    "target": "esnext"
  },
  "include": [
    "./db/**/*",
    "./src/**/*"
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ]
}